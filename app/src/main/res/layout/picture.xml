<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:orientation="vertical">


    <ImageView
        android:paddingTop="5dp"
        android:id="@+id/fotoweertegeven"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:srcCompat="@drawable/img_placeholder" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="28dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"></ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/tv_result_naam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:text="resultnaam"
                android:textSize="15dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_result_projectnaam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_result_naam"
                android:text="projectnaam"
                android:textSize="15dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_result_componentnaam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_result_projectnaam"
                android:text="componentnaam"
                android:textSize="15dp"
                android:visibility="gone" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_select_new_result"
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="select new result"

            android:visibility="gone" />
    </RelativeLayout>


</LinearLayout>